{
    "manifest_version": 2,
    "name": "Plasmabounce",
    "description": "The HACKED extension for Shanmao Homework System",
    "version": "4.0",
    "permissions": [
        "tabs",
        "https://plasmabounce.winslow.cloud/",
		"webRequest",
		"webNavigation", "*://*/*"
    ],
	"web_accessible_resources": [
        "scripts/inject.js"
    ],
    "icons":
	{
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
    "content_scripts": 
	[
		{
			"matches": ["<all_urls>"],
			"js": ["scripts/plasmabounce.js"],
			"css": ["plasmabounce.css"],
			"run_at": "document_start"
		}
	],
	"background":{
		"scripts":["scripts/background.js"],
        "persistent": true
	},
    "browser_action": 
	{
		"default_icon": "icon.png",
		"default_title": "Plasmabounce",
		"default_popup": "index.html"
	},
	"homepage_url": "https://www.winslow.cloud"
}